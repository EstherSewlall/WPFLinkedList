<Window x:Class="LinkedList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Linked Page Viewer" Height="450" Width="800" KeyDown="Window_KeyDown">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\techmarkit\Downloads\professional-background-2b3p57557lfg0y5g.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <TextBlock x:Name="PageNumberTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="16"/>
        <TextBlock x:Name="PageContentTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" FontSize="12" Margin="10,0,10,0"/>
        <TextBlock x:Name="AuthorTextBlock" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,40" FontSize="10"/>
        <Button x:Name="PreviousButton" Content="Previous [P]" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Margin="10,0,0,10" Click="PreviousButton_Click"/>
        <Button x:Name="NextButton" Content="[N] Next >" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Margin="0,0,10,10" Click="NextButton_Click"/>


        
    </Grid>
</Window>
